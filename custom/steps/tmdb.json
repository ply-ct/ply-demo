{
  "type": "step",
  "path": "src/tmdb.ts",
  "name": "The Movie DB",
  "icon": "custom/steps/tmdb.svg",
  "template": {
    "Movies": {
      "widgets": [
        {
          "type": "text",
          "attribute": "year",
          "label": "Year"
        },
        {
          "type": "select",
          "attribute": "genre",
          "label": "Genre",
          "options": [
            "Horror",
            "Mystery"
          ],
          "default": "Horror"
        },
        {
          "type": "select",
          "attribute": "studio",
          "label": "Studio",
          "options": [
            "Universal Studios",
            "RKO Radio Pictures",
            "Paramount Pictures"
          ],
          "default": "Universal Studios"
        },
        {
          "type": "text",
          "attribute": "apiKey",
          "label": "API Key"
        }
      ]
    }
  }
}
