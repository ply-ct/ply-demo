{
  "name": "ply-demo",
  "version": "1.0.2",
  "description": "Illustrate Ply automated testing",
  "main": "dist/src/main.js",
  "files": [
    "dist/src"
  ],
  "types": "dist/src",
  "engines": {
    "node": ">=12"
  },
  "config": {
    "port": 3001
  },
  "scripts": {
    "build": "tsc",
    "start-movies": "run-script-os",
    "start-movies:default": "ply-movies start -p $npm_package_config_port -q &",
    "start-movies:windows": "start /b ply-movies start -p $npm_package_config_port",
    "stop-movies": "ply-movies stop -p $npm_package_config_port",
    "ply": "ply",
    "pretest": "npm run start-movies",
    "test": "npm-run-all ply stop-movies --continue-on-error"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/node": "^13.13.15",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "npm-run-all": "^4.1.5",
    "ply-ct": "^2.1.3",
    "ply-movies": "^1.0.11",
    "run-script-os": "^1.1.1",
    "typescript": "^4.0.2"
  },
  "dependencies": {}
}
